{
  "name": "ecommerce-api",
  "version": "1.0.0",
  "description": "Projeto final para pos de arquitetura de software",
  "main": "index.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "npm run typeorm migration:generate src/database/migrations/ --dataSource src/database/index.ts",
    "migration:run": "npm run typeorm migration:run --dataSource src/database/index.ts",
    "migration:revert": "npm run typeorm migration:revert --dataSource src/database/index.ts",
    "build": "tsc",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lucianosouzagt/ecommerce-api.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/lucianosouzagt/ecommerce-api/issues"
  },
  "homepage": "https://github.com/lucianosouzagt/ecommerce-api#readme",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "dotenv": "^16.5.0",
    "dotenv-expand": "^12.0.2",
    "express": "^5.1.0",
    "pg": "^8.16.1",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.24"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.3",
    "@types/supertest": "^6.0.3",
    "commitizen": "^4.3.1",
    "eslint": "^9.29.0",
    "husky": "^9.1.7",
    "jest": "^30.0.2",
    "prettier": "^3.5.3",
    "supertest": "^7.1.1",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
